		"src/**/*.vue",
		"components.d.ts",
		"auto-imports.d.ts",
		"../core/src/**/*.ts",
	],
	"exclude": [
		"**/*.story.vue",
		"**/*.test.ts",
		"src/tailwind/*",
		"src/histoire.setup.ts"
	]
}
