{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@json/*": ["../../svws-asd/src/main/resources/de/svws_nrw/asd/types/*"],
		},
		"types": [ "vite/client" ],
		"resolveJsonModule": true,
	},
	"include": [
