{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@comp": ["../components/src/index.ts"],
			"@ui": ["../ui/src/index.ts"],
		}
	},
	"include": [
		"*.ts",
		"src/**/*",
		"src/**/*.vue",
		"components.d.ts",
		"../ui/src/",
		"../components/src/",
		"../core/src/",
	],
	"exclude": [
		"**/*.story.vue",
		"**/histoire.setup.ts", 
		"tailwind.config.js",
		"postcss.config.js",
	]
}
