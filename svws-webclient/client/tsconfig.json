{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@comp": ["../components/src/index.ts"],
			"@ui": ["../ui/src/index.ts"],
			"@core": ["../core/src/index.ts"]
		}
	},
	"include": [
		"*.ts",
		"tailwind.config.cjs",
		"postcss.config.cjs",
		"src/**/*",
		"src/**/*.vue",
		"components.d.ts",
		"../ui/src/",
		"../components/src/"
	]
}
